{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "esnext",
        "target": "ES2017",
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "."
    },
    "include": [
        "src/**/*",
        "index.tsx",
    ],
    "exclude": [
        "**/*.js",
        "node_modules",
        "dist"
    ]
}