{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "outDir": ".",
        "rootDir": "."
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "../hooks/style/colors.ts",
        "stories/**/*.mdx"
    ],
    "exclude": [
        "**/*.js",
        "./.storybook/**",
        "./storybook-static/**",
    ]
}