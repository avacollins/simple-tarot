{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "target": "es2017",
        "module": "nodenext",
        "lib": [
            "es2017"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "files": [
        "src/graphql.d.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist"
    ]
}